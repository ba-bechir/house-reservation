    {% else %}
        <p>Enfant</p>
    {% endif %}

    {% for prenom, age in tableau %}
        {{prenom}} a {{age}} ans <br/>
    {% endfor %}

    {% for compteur in 0..10 %}
        {{compteur}}
    {% endfor %}

{% endblock %}